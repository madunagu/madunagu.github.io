{
  "name": "my-webpack-project",
  "version": "1.0.0",
  "description": "My webpack project",
  "main": "src/main.js",
  "scripts": {
    "dev": "vite",
    "watch-sass": "sass -w src/main.scss dist/main.css",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "watch-tailwind": "npx tailwindcss -i ./src/input.css -o ./dist/tailwind.css --watch",
    "all": "vite & npm run watch-sass & npm run watch-tailwind",
    "build": "npx tailwindcss -i ./src/input.css -o ./dist/tailwind.css && webpack --mode=production --node-env=production",
    "build:dev": "webpack --mode=development",
    "build:prod": "webpack --mode=production --node-env=production",
    "watch": "webpack --watch",
    "serve": "webpack serve"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@webpack-cli/generators": "^3.0.7",
    "autoprefixer": "^10.4.18",
    "css-loader": "^6.10.0",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.9.2",
    "prettier": "^3.2.5",
    "sass": "^1.71.1",
    "sass-loader": "^14.1.1",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.9",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.2",
    "workbox-webpack-plugin": "^7.0.0"
  },
  "dependencies": {
    "@studio-freight/lenis": "^1.0.42",
    "gsap": "^3.13.0",
    "split-type": "^0.3.4",
    "three": "^0.161.0",
    "tone": "^14.7.77"
  }
}
